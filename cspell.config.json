{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "import": [
    "@cspell/dict-ru_ru/cspell-ext.json"
  ],
  "dictionaryDefinitions": [
    {
      "name": "project-words",
      "path": ".cspell/project-words.txt",
      "addWords": true
    }
  ],
  "dictionaries": [
    "ru-ru",
    "project-words"
  ],
  "files": [
    "locales/**/*",
  ],
  "ignorePaths": [
    "node_modules",
    "dist",
    "/project-words.txt"
  ]
}
